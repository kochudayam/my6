<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/configurepreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/configurepreferences" />

    <Button
        android:id="@+id/retreiveassignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/retreiveassignment" />

    <Button
        android:id="@+id/manageassignments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manageassignments" />

</LinearLayout>
